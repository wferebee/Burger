<div class="container" id="testb">
	<div class="container">

		<div class="row">

			<div class="col-sm col-md col-lg">
				<h1 id = "monster" class = "logo">MONSTER</h1>
			</div>

			<div class="col-sm col-md col-lg">
				<img id = "pic" src="https://s3-prod.adage.com/s3fs-public/styles/width_1024/public/20190801_BKImpossibleCow_3x2.jpg" width="100%" height="75%">
			</div>

			<div class="col-sm col-md col-lg">	
				<h1 id = "mburger" class = "logo">BURGER</h1>				
			</div>

		</div>
	</div>

	<div class="row">
		
		<div class="col-sm col-md col-lg">

			<p class="lead" id ="firstp">Add a Burger and Click to Submit</p>
		
			<form class="create-update-form" action="burgers/create" method="POST">

				<div class="form-group">
					<textarea class="form-control input-lg" type="text" name="name" row="3"></textarea>
				</div>

				<button class="btn btn-default btn-lg" type="submit">Submit</button>

			</form>
		</div>

		<div class="col-sm col-md col-lg" id="eat-burger">
			<div class="panel-panel default">

				<h1>Ready to Eat Burgers</h1>
				<h6>(scroll down)</h6>
				<ul class="list-group">
					{{#each burgers}}
						{{#unless this.devoured}}

							<li class="list-group-item">

								<span class="input-group-btn">

									<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">

										<input type="hidden" name="devoured" value="true">

										<button id ="d-button" class="btn btn-default btn-lg" type="submit">{{this.name}}</button>

									</form>
								</span>
							</li>
						{{/unless}}
					{{/each}}
				</ul>
			</div>
		</div>

		<div class="col-sm col-md col-lg" id ="test-scroll">

			<h1>Devoured Burgers</h1>
			<h6>(scroll down)</h6>

			<div class="panel panel-default" >
				
				<ul class="list-group">

					{{#each burgers}}

						{{#if this.devoured}}

							<li class="list-group-item">

								<p class="lead leadD">{{this.name}}</p>

							</li>

						{{/if}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>

